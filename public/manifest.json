{
  "manifest_version": 3,
  "name": "Sélectionneur d'élément",
  "version": "1.0",
  "description": "Cette extension permet de sélectionner un élément sur une page web",
  "permissions": [
    "tabs",
    "activeTab",
     "scripting",
     "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "./images/logo24.png",
      "32": "./images/logo24.png",
      "48": "./images/logo24.png",
      "128": "./images/logo512.png",
      "256": "./images/logo512.png",
      "512": "./images/logo512.png"
    }
  },
  "web_accessible_resources": [
        {
          "resources": [
            "images/logo512.png"
          ],
          "matches": ["<all_urls>"]
        }
    ]
}
